template(name="widget")
  with widget
    .widget.container
      .row
        .col-xs-12.col-md-6
          .panel.panel-default
            .panel-heading
              h4 Step 1. Customize your widget
            .panel-body
              form
              .form-group
                +input(family="widget" _id=_id property="name" value=name placeholder="Widget name" isNew=isNew)
              .form-group
                input(placeholder="I wish this page" value="{{widget.label}}").form-control
              .form-group
                input(placeholder="...had better graphics" value="{{widget.placeholder}}").form-control
              .form-group
                .input-group
                  span.input-group-btn.btn-group-sm
                    button.btn.btn-default.fa.fa-paper-plane(class="{{#if condition buttonIcon 'is' 'fa fa-paper-plane'}}active{{/if}}")
                    button.btn.btn-default.fa.fa-check(class="{{#if condition buttonIcon 'is' 'fa fa-check'}}active{{/if}}")
                    button.btn.btn-default.fa.fa-reply(class="{{#if condition buttonIcon 'is' 'fa fa-reply'}}active{{/if}}")
                    button.btn.btn-default.fa.fa-rocket(class="{{#if condition buttonIcon 'is' 'fa fa-rocket'}}active{{/if}}")
                    button.btn.btn-default(style="margin-right:10px; max-width:inherit;" class="{{#if condition buttonIcon 'is' ''}}active{{/if}}") Text only
                  input.form-control(placeholder="Button text")
              .form-group
                textarea(placeholder="Custom CSS", rows="6").form-control
        .col-xs-12.col-md-6
          .panel.panel-default
            .panel-heading
              h4 Step 2. Install on your site
            .panel-body
              .panel
                // Add scaling if possible
                iframe(src="https://wishpool-widget.meteor.com/" height="40px" frameborder="0" style="display: block; margin: 0 auto;")
              form(role="form")
              .form-group
                textarea(rows="4").form-control
                  | some code
              button.btn.btn-success.copy-to-clipboard(type="button") Copy to clipboard
              | &nbsp; and paste on your site

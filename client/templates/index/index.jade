template(name="index")
  .index.container
    .row
      .col-xs-12
        if starred.count
          h5.text-muted Starred
          .list-group
            each starred
              +feedback
        if new.count
          h5.text-muted New
          .list-group
            each new
              +feedback
        if archived.count
          h5.text-muted Archived
          .list-group
            each archived
              +feedback


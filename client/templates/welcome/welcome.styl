.btn.login-with-google
  font-weight bold

.masthead
  position relative
  height 100vh
  padding 0 !important
  .header
    position absolute
    height 60px
    padding 0 20px
    .real-sugar a
      line-height 60px
      font-size 24px
      color #FFFFFF
      &:hover
        color #FFFFFF
  .container
    position: relative;
    top 50%
    transform translateY(-50%)
  .scrollto
    position: absolute;
    bottom: 5px;
    left: 50%;
    transform: translateX(-50%);
    &:hover
      text-decoration underline

.masthead, .footercta
  h1, h2, h3, h4, h5, h6, .h1, .h2, .h3, .h4, .h5, .h6
    color #ffffff

.wishpool-container
  width 500px
  margin 0 auto

.competitor-pricing
  font-size 16px

.zephyr
  margin 15px 0

@media (max-width: 480px)
  .masthead
    h1 a
      font-size 52px

/**
 * iPad with portrait orientation.
 */
@media all and (device-width: 768px) and (device-height: 1024px) and (orientation:portrait) {
  .masthead {
    height: 1024px;
  }
}

/**
 * iPad with landscape orientation.
 */
@media all and (device-width: 768px) and (device-height: 1024px) and (orientation:landscape) {
  .masthead {
    height: 768px;
  }
}
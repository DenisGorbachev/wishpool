html body
  background-color #ececec

.list-group
  -webkit-box-shadow: 0 1px 4px rgba(0, 0, 0, 0.3);
  box-shadow: 0 1px 4px rgba(0, 0, 0, 0.3);
  border-width 0
  .list-group-item
    border-left-width 0
    border-right-width 0
    border-bottom-width 0
    &:first-child
      border-top-width 0

.control-icons > *
  color #bbbbbb
  &:hover, &:focus, &:active
    color #333333

